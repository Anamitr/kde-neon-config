#Added by me

#example from book
alias d='date +%D'
alias mypass='cat /etc/passwd'

#Recommended for linux
#Ask before overriding while moving
alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'

#print directory size
alias print-directory-size='du -sh'
alias pds='print-directory-size'
alias dush='print-directory-size'
#find processes by name
alias find-processes-by-name='ps aux | grep'
alias psag='find-processes-by-name'
#kill process
alias kill-process='kill -9'
alias kp='kill-process'
#print formated PATH
alias print-formated-path='echo $PATH | sed "s/:/\n/g"'
alias ppath=`print-formated-path`
#create file and path		# not working but worh checking out
alias mdt='for f in "$@"; do mkdir -p "$(dirname "$f")"; done; touch "$@"'
#extract tar
alias extract-tar='tar -zxvf'
alias tare='extract-tar'
#update kde neon
alias kde-update='pkcon refresh && pkcon update'
